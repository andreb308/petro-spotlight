{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "petro-spotlight",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": true,
        "create": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": false
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": ["icons/icon.ico"],
      "identifier": "com.petrospotlight.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "visible": false,
        "decorations": false,
        "fullscreen": false,
        "transparent": true,
        "height": 200,
        "resizable": true,
        "title": "react-app-main",
        "center": true,
        "alwaysOnTop": false,
        "width": 400
      },
      {
        "label": "secondary",
        "title": "petro-spotlight-ICAD",
        "url": "popup.html",
        "visible": true,
        "center": true,
        "alwaysOnTop": true,
        "decorations": false,
        "hiddenTitle": true,
        "fullscreen": false,
        "resizable": false,
        "transparent": true,
        "height": 150,
        "width": 700
      }
    ]
  },
  "plugins": {
    "spotlight": {
      "windows": [
        {
          "label": "secondary",
          "shortcut": "Ctrl+Shift+K"
        }
      ],
      "global_close_shortcut": "Escape"
    }
  }
}
